{% extends 'base.html.twig' %}

{% block title %}Place{% endblock %}

{% block body %}
    <h1>Place</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Użytkownik: </th>
                <td>{{ place.userId.username }}</td>
            </tr>
            <tr>
                <th>Nr miejsca: </th>
                <td>{{ place.number }}</td>
            </tr>
            <tr>
                <th>Początek postoju: </th>
                <td>{{ place.startDate ? place.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Koniec postoju: </th>
                <td>{{ place.endDate ? place.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nazwa jednostki: </th>
                <td>{{ place.boatName }}</td>
            </tr>
            <tr>
                <th>Nr klucza: </th>
                <td>{{ place.keyNumber is not null ? place.keyNumber.number : '---' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_place_crud_index') }}">back to list</a>

    <a href="{{ path('app_place_crud_edit', {'id': place.id}) }}">edit</a>

    {{ include('place_crud/_delete_form.html.twig') }}
{% endblock %}
