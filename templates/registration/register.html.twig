{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="place">
        <h1 class="title">Rejestracja</h1>

        {{ form_errors(registrationForm) }}
        {{ form_start(registrationForm) }}
        <div class="reg_form">
            {{ form_row(registrationForm.username) }}
        </div>
        <div class="reg_form">
            {{ form_row(registrationForm.plainPassword) }}
        </div>
        <div class="reg_form">
            {{ form_row(registrationForm.name) }}
        </div>
        <div class="reg_form">
            {{ form_row(registrationForm.surname) }}
        </div>
        <div class="reg_form">
            {{ form_row(registrationForm.email) }}
        </div>
        <div class="reg_form">
            {{ form_row(registrationForm.phone) }}
        </div>
        <div>
            <a href="{{ path('app_terms') }}" class="nav__item" target="_blank">Regulamin</a>
        </div>
        <div class="reg_form--terms">
            {{ form_row(registrationForm.agreeTerms) }}
        </div>
        <button type="submit" class="contact__form-btn btn-special-animation spacer">Zarejestruj</button>
        {{ form_end(registrationForm) }}

        {# wyświetla błedy daty, start pozniej niz koniec#}
        {% for flashError in app.flashes('error') %}
            <div class="flash-error">
                {{ flashError }}
            </div>
        {% endfor %}

    </div>
{% endblock %}
