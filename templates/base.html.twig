        <script>
        $(document).ready(function () {
            var NavY = $(".burger-btn").offset().top - 45;

            var stickyNav = function () {
                var ScrollY = $(window).scrollTop();

                if (ScrollY > NavY) {
                    $(".burger-btn").addClass("sticky");
                } else {
                    $(".burger-btn").removeClass("sticky");
                }
            };

            stickyNav();

            $(window).scroll(function () {
                stickyNav();
            });
        });
    </script>
