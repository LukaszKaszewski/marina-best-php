{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="place">
    <h2>Dane użytkowników</h2>


    {% if is_granted('ROLE_ADMIN') %}
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Użytkownik</th>
            <th>Rola</th>
            <th>Hasło</th>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Email</th>
            <th>Data utworzenia</th>
            <th>Telefon</th>
         </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.surname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.phone }}</td>
                <td>
{#                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>#}
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Edytuj</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <a href="{{ path('app_user_new') }}">
            <button class="contact__form-btn btn-special-animation spacer">Dodaj nowego użytkownika</button>
        </a>
    {% else %}
        <table class="table">
            <thead>
            <tr>
                <th>Użytkownik</th>
                <th>Hasło</th>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Email</th>
                <th>Telefon</th>
            </tr>
            </thead>
            <tbody>
{#            {% for user in users %}#}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.password }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.surname }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.phone }}</td>
                    <td>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}">Edytuj</a>
                    </td>
                </tr>
{#            {% endfor %}#}
            </tbody>
        </table>
    {% endif %}


    <a href="{{ path('app_place_crud_index') }}">
        <button class="contact__form-btn btn-special-animation spacer">Panel użytkownika</button>
    </a>
    </div>
{% endblock %}
