{% extends 'base.html.twig' %}

{% block title %}Service index{% endblock %}

{% block body %}
    <h1>Service index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Energy</th>
                <th>Fuel</th>
                <th>Water</th>
                <th>Waste</th>
                <th>Date</th>
                <th>Crane</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.energy ? 'Yes' : 'No' }}</td>
                <td>{{ service.fuel ? 'Yes' : 'No' }}</td>
                <td>{{ service.water ? 'Yes' : 'No' }}</td>
                <td>{{ service.waste ? 'Yes' : 'No' }}</td>
                <td>{{ service.date ? service.date|date('Y-m-d') : '' }}</td>
                <td>{{ service.crane ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_service_show', {'id': service.id}) }}">show</a>
                    <a href="{{ path('app_service_edit', {'id': service.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_service_new') }}">Create new</a>
{% endblock %}
