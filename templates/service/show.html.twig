{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
    <h1>Service</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Energy</th>
                <td>{{ service.energy ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Fuel</th>
                <td>{{ service.fuel ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Water</th>
                <td>{{ service.water ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Waste</th>
                <td>{{ service.waste ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ service.date ? service.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Crane</th>
                <td>{{ service.crane ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_service_index') }}">back to list</a>

    <a href="{{ path('app_service_edit', {'id': service.id}) }}">edit</a>

    {{ include('service/_delete_form.html.twig') }}
{% endblock %}
